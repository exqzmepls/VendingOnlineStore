@model VendingOnlineStore.Models.Order.OrderContentViewModel

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-4">
            <img src="@Model.PhotoLink" class="img-fluid rounded-start m-3" alt="no content" style="max-height: 10rem;">
        </div>
        <div class="col-8">
            <div class="card-body">
                <div class="row">
                    <div class="col-8">
                        <h3 class="card-title">@Html.DisplayFor(content => content.Name)</h3>
                        <p class="card-text">
                            @Html.DisplayFor(content => content.Description)
                        </p>
                    </div>
                    <div class="col-4">
                        <div class="row">
                            <div class="col-12">
                                @Html.DisplayNameFor(content => content.Price): @Html.DisplayFor(content => content.Price)
                            </div>
                            <div class="col-12">
                                @Html.DisplayNameFor(content => content.Count): @Html.DisplayFor(content => content.Count)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>