@using VendingOnlineStore.Models.Account
@model LoginViewModel

@{
    ViewData["Title"] = "Sign In";
}

<h1>Sign In</h1>

<div class="row">
    <div class="col-10 col-md-7 col-xl-5">
        <form id="loginForm" asp-controller="Account" asp-action="Login" method="post">
            <h2>Use a local account to log in.</h2>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Login" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Login" class="form-label">Login</label>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true"/>
                <label asp-for="Password" class="form-label">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Sing In</button>
            </div>
        </form>
        <div>
            <p>
                <a asp-controller="Account" asp-action="Register">Sign Up as a new user</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}